<div class="jumbotron text-center">
    <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
                <h2>Modifique as informações do carro.</h2>
                <form action="/carromod" method="POST">
                        <div class="form-group">
                              <label>Marca</label>
                              <input type="text" name="marca" class="form-control" value="<%=carro.marca%>">
                        </div>
                        <div class="form-group">
                              <label>Modelo</label>
                              <input type="text" name="modelo" class="form-control" value="<%=carro.modelo%>">
                        </div>
                        <div class="form-group">
                              <label>Versão</label>
                              <input type="text" name="versao" class="form-control" value="<%=carro.versao%>">
                        </div>
                        <div class="form-group">
                              <label>Ano</label>
                              <input type="text" name="ano" class="form-control" value="<%=carro.ano%>">
                        </div>
                        <div class="form-group">
                              <label>Quilometragem</label>
                              <input type="text" name="quilometragem" class="form-control" value="<%=carro.quilometragem%>">
                        </div>
                        <div class="form-group">
                              <label>Tipo de Câmbio</label>
                              <input type="text" name="cambio" class="form-control" value="<%=carro.cambio%>">
                        </div>
                        <div class="form-group">
                              <label>Preço de venda</label>
                              <input type="text" name="preco" class="form-control" value="<%=carro.preco%>">
                        </div>
                        <div class="form-group">
                              <input type="hidden" name="itemId" id="itemId" value="<%=carro._id%>">
                        </div>
                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-primary btn-lg">Atualizar</button>
                      </div>
                </form>
          </div>
    </div>
</div>